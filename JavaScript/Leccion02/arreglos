// Creaci√≥n de Array o Arreglos 
// let autos = new Array('Ferrari','Renault','BMW'); sintaxis vieja
const autos = ['Ferrari','Renault','BMW'];
console.log(autos);

//Recorremos los elementos del Arreglo
console.log(autos[0]);
console.log(autos[2]);

for(var i = 0; i < autos.length; i++){
    console.log(i+ " : " +autos[i]);
}

// modificamos los elementos del arreglo
autos[1] = "volvo";
console.log(autos[1]);

// Agregamos nuevos valores al arreglo
autos.push("Audi"); // agrega el elemento al final del arreglo
console.log(autos);

// Otras forma de agregar elementos al arreglo
autos[autos.length] = 'Porche';
console.log(autos);

// Tercera forma de agregar elementos teniendo CUIDADO
autos[6] = 'Renault';
console.log(autos);

// Como preguntar si es una Array
console.log(Array.isArray(autos)); // devuelve un booleano
console.log(autos instanceof Array); // preguntamos si la variable es una instancia de Array


